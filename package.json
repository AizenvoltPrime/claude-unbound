{
  "name": "claude-unbound",
  "displayName": "Claude Unbound",
  "description": "Unleash the full power of Claude AI as your coding assistant",
  "version": "0.1.0",
  "publisher": "AizenvoltPrime",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AizenvoltPrime/claude-unbound.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "claude",
    "ai",
    "assistant",
    "anthropic",
    "coding",
    "unbound"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-unbound.openChat",
        "title": "Open Chat",
        "category": "Claude Unbound",
        "icon": {
          "light": "resources/icon.png",
          "dark": "resources/icon.png"
        }
      },
      {
        "command": "claude-unbound.newSession",
        "title": "New Chat Session",
        "category": "Claude Unbound"
      },
      {
        "command": "claude-unbound.cancelSession",
        "title": "Cancel Current Request",
        "category": "Claude Unbound"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "claude-unbound.openChat",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "claude-unbound.openChat",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u"
      }
    ],
    "configuration": {
      "title": "Claude Unbound",
      "properties": {
        "claude-unbound.permissionMode": {
          "type": "string",
          "default": "ask",
          "enum": [
            "ask",
            "auto"
          ],
          "enumDescriptions": [
            "Ask for approval before file modifications",
            "Automatically approve all operations"
          ],
          "description": "How to handle tool permissions"
        },
        "claude-unbound.maxTurns": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "maximum": 200,
          "description": "Maximum conversation turns per session"
        }
      }
    }
  },
  "scripts": {
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "node esbuild.config.mjs",
    "build:webview": "vite build",
    "watch": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "watch:extension": "node esbuild.config.mjs --watch",
    "watch:webview": "vite build --watch",
    "dev": "npm run watch",
    "typecheck": "tsc --noEmit",
    "package": "vsce package",
    "lint": "eslint src --ext .ts,.vue"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "dompurify": "^3.3.1"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.95.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "highlight.js": "^11.10.0",
    "marked": "^15.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vue": "^3.5.0"
  }
}
