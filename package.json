{
  "name": "claude-unbound",
  "displayName": "Claude Unbound",
  "description": "A VS Code extension that integrates Claude AI as your coding assistant using the Agent SDK.",
  "version": "0.1.0",
  "publisher": "AizenvoltPrime",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AizenvoltPrime/claude-unbound.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "claude",
    "ai",
    "assistant",
    "anthropic",
    "coding",
    "unbound"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onWebviewPanel:claude-unbound.chat"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-unbound.openChat",
        "title": "Open Chat",
        "category": "Claude Unbound",
        "icon": {
          "light": "resources/icon.png",
          "dark": "resources/icon.png"
        }
      },
      {
        "command": "claude-unbound.newSession",
        "title": "New Chat Session",
        "category": "Claude Unbound"
      },
      {
        "command": "claude-unbound.cancelSession",
        "title": "Cancel Current Request",
        "category": "Claude Unbound"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "claude-unbound.openChat",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "claude-unbound.openChat",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u"
      }
    ],
    "configuration": {
      "title": "Claude Unbound",
      "properties": {
        "claude-unbound.permissionMode": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "acceptEdits",
            "bypassPermissions",
            "plan"
          ],
          "enumDescriptions": [
            "Standard behavior - prompts for dangerous operations",
            "Auto-accept file edit operations",
            "Bypass all permission checks (use with caution)",
            "Planning mode - read-only, no execution"
          ],
          "description": "How to handle tool permissions"
        },
        "claude-unbound.maxTurns": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "maximum": 200,
          "description": "Maximum conversation turns per session"
        },
        "claude-unbound.model": {
          "type": "string",
          "default": "",
          "description": "Claude model to use (empty for default). Examples: claude-sonnet-4-5-20250929, claude-opus-4-20250514"
        },
        "claude-unbound.maxBudgetUsd": {
          "type": [
            "number",
            "null"
          ],
          "default": null,
          "minimum": 0,
          "description": "Maximum budget in USD per session (null for unlimited)"
        },
        "claude-unbound.maxThinkingTokens": {
          "type": [
            "number",
            "null"
          ],
          "default": null,
          "minimum": 1000,
          "maximum": 63999,
          "description": "Maximum tokens for extended thinking/reasoning (null to disable)"
        },
        "claude-unbound.betasEnabled": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "context-1m-2025-08-07"
            ]
          },
          "default": [],
          "description": "Enabled beta features (e.g., 1M context window for Sonnet 4/4.5)"
        },
        "claude-unbound.enableFileCheckpointing": {
          "type": "boolean",
          "default": true,
          "description": "Enable file checkpointing for undo/rewind functionality"
        },
        "claude-unbound.maxIndexedFiles": {
          "type": "number",
          "default": 5000,
          "minimum": 100,
          "maximum": 50000,
          "description": "Maximum number of files to index for @ mention autocomplete"
        },
        "claude-unbound.sandbox": {
          "type": "object",
          "default": {
            "enabled": false
          },
          "description": "Sandbox settings for command execution isolation",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "Enable sandbox mode for Bash commands"
            },
            "autoAllowBashIfSandboxed": {
              "type": "boolean",
              "default": true,
              "description": "Auto-allow Bash commands when sandboxed"
            },
            "allowUnsandboxedCommands": {
              "type": "boolean",
              "default": false,
              "description": "Allow commands that cannot be sandboxed"
            },
            "networkAllowedDomains": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [],
              "description": "Allowed network domains in sandbox"
            },
            "networkAllowLocalBinding": {
              "type": "boolean",
              "default": false,
              "description": "Allow binding to local ports in sandbox"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "node esbuild.config.mjs",
    "build:webview": "vite build",
    "watch": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "watch:extension": "node esbuild.config.mjs --watch",
    "watch:webview": "vite build --watch",
    "dev": "npm run watch",
    "typecheck": "tsc --noEmit",
    "package": "vsce package",
    "lint": "eslint src --ext .ts,.vue"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "@vueuse/core": "^14.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "fzf": "^0.5.2",
    "lucide-vue-next": "^0.562.0",
    "radix-vue": "^1.9.17",
    "reka-ui": "^2.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vue-sonner": "^2.0.9",
    "vue3-lottie": "^3.3.1"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.95.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "highlight.js": "^11.10.0",
    "marked": "^15.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vue": "^3.5.0"
  }
}
