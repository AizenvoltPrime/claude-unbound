{
  "name": "damocles",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "1.0.50",
  "publisher": "Aizenvolt",
  "icon": "resources/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AizenvoltPrime/damocles.git"
  },
  "bugs": {
    "url": "https://github.com/AizenvoltPrime/damocles/issues"
  },
  "homepage": "https://github.com/AizenvoltPrime/damocles#readme",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "keywords": [
    "claude",
    "ai",
    "assistant",
    "anthropic",
    "coding",
    "damocles"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onWebviewPanel:damocles.chat"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "damocles.openChat",
        "title": "%command.openChat.title%",
        "category": "Damocles",
        "icon": {
          "light": "resources/icon.png",
          "dark": "resources/icon.png"
        }
      },
      {
        "command": "damocles.newSession",
        "title": "%command.newSession.title%",
        "category": "Damocles"
      },
      {
        "command": "damocles.cancelSession",
        "title": "%command.cancelSession.title%",
        "category": "Damocles"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "damocles.openChat",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "damocles.openChat",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u"
      }
    ],
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "damocles.permissionMode": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "acceptEdits",
            "plan"
          ],
          "enumDescriptions": [
            "%configuration.permissionMode.default%",
            "%configuration.permissionMode.acceptEdits%",
            "%configuration.permissionMode.plan%"
          ],
          "description": "%configuration.permissionMode.description%"
        },
        "damocles.maxTurns": {
          "type": "number",
          "default": 100,
          "minimum": 1,
          "maximum": 200,
          "description": "%configuration.maxTurns.description%"
        },
        "damocles.model": {
          "type": "string",
          "default": "",
          "description": "%configuration.model.description%"
        },
        "damocles.maxBudgetUsd": {
          "type": [
            "number",
            "null"
          ],
          "default": null,
          "minimum": 0,
          "description": "%configuration.maxBudgetUsd.description%"
        },
        "damocles.maxThinkingTokens": {
          "type": [
            "number",
            "null"
          ],
          "default": null,
          "minimum": 1000,
          "maximum": 63999,
          "description": "%configuration.maxThinkingTokens.description%"
        },
        "damocles.betasEnabled": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "context-1m-2025-08-07"
            ]
          },
          "default": [],
          "description": "%configuration.betasEnabled.description%"
        },
        "damocles.enableFileCheckpointing": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.enableFileCheckpointing.description%"
        },
        "damocles.maxIndexedFiles": {
          "type": "number",
          "default": 5000,
          "minimum": 100,
          "maximum": 50000,
          "description": "%configuration.maxIndexedFiles.description%"
        },
        "damocles.sandbox": {
          "type": "object",
          "default": {
            "enabled": false
          },
          "description": "%configuration.sandbox.description%",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "%configuration.sandbox.enabled.description%"
            },
            "autoAllowBashIfSandboxed": {
              "type": "boolean",
              "default": true,
              "description": "%configuration.sandbox.autoAllowBashIfSandboxed.description%"
            },
            "allowUnsandboxedCommands": {
              "type": "boolean",
              "default": false,
              "description": "%configuration.sandbox.allowUnsandboxedCommands.description%"
            },
            "networkAllowedDomains": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [],
              "description": "%configuration.sandbox.networkAllowedDomains.description%"
            },
            "networkAllowLocalBinding": {
              "type": "boolean",
              "default": false,
              "description": "%configuration.sandbox.networkAllowLocalBinding.description%"
            }
          }
        },
        "damocles.providerProfiles": {
          "type": "array",
          "default": [],
          "scope": "window",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "%configuration.providerProfiles.name.description%"
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "%configuration.providerProfiles.env.description%"
              }
            },
            "required": [
              "name",
              "env"
            ]
          },
          "description": "%configuration.providerProfiles.description%"
        },
        "damocles.activeProviderProfile": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "scope": "window",
          "description": "%configuration.activeProviderProfile.description%"
        },
        "damocles.autoCompact": {
          "type": "object",
          "default": {
            "enabled": false,
            "warningThreshold": 60,
            "softThreshold": 70,
            "hardThreshold": 75
          },
          "description": "%configuration.autoCompact.description%",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "%configuration.autoCompact.enabled.description%"
            },
            "warningThreshold": {
              "type": "number",
              "default": 60,
              "minimum": 15,
              "maximum": 90,
              "description": "%configuration.autoCompact.warningThreshold.description%"
            },
            "softThreshold": {
              "type": "number",
              "default": 70,
              "minimum": 15,
              "maximum": 95,
              "description": "%configuration.autoCompact.softThreshold.description%"
            },
            "hardThreshold": {
              "type": "number",
              "default": 75,
              "minimum": 15,
              "maximum": 95,
              "description": "%configuration.autoCompact.hardThreshold.description%"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "node esbuild.config.mjs",
    "build:webview": "vite build",
    "watch": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "watch:extension": "node esbuild.config.mjs --watch",
    "watch:webview": "vite build --watch",
    "dev": "npm run watch",
    "typecheck": "tsc --noEmit",
    "package": "npx @vscode/vsce package",
    "lint": "eslint src --ext .ts,.vue"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.22",
    "@vueuse/core": "^14.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "diff": "^8.0.2",
    "fzf": "^0.5.2",
    "lucide-vue-next": "^0.562.0",
    "pinia": "^3.0.4",
    "radix-vue": "^1.9.17",
    "reka-ui": "^2.7.0",
    "shiki": "^3.20.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vue-i18n": "^11.2.8",
    "vue-sonner": "^2.0.9",
    "vue3-lottie": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/diff": "^7.0.2",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.95.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "@vscode/l10n-dev": "^0.0.35",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "marked": "^15.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vue": "^3.5.0"
  }
}
